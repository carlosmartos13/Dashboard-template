generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}


// configuração inicial de usuarios

enum Role {
  SUPER_ADMIN
  ADMIN
  FINANCEIRO
  SUPORTE
  ATENDENTE
  REGISTRADO
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

//sessão de login
model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// dados dos usuarios
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  password      String?
  resetToken       String?   @unique // O código secreto
  resetTokenExpiry DateTime? // Até quando esse código vale
  role          Role      @default(REGISTRADO)
  emailVerified DateTime?
  image         String?

  // --- 2FA Fields ---
  twoFactorEnabled      Boolean   @default(false) // Master Switch (Liga/Desliga Geral)

  twoFactorEmailEnabled Boolean   @default(false) // Se true, tem Email configurado
  twoFactorAppEnabled   Boolean   @default(false)
  twoFactorSecret       String?   // Guarda a chave secreta do Google Auth
  twoFactorBackupCodes  String?   // Códigos de backup

  emailTwoFactorCode    String?   // O código de 6 dígitos enviado por email
  emailTwoFactorExpires DateTime? // Validade do código de email

  // REMOVIDO: twoFactorMethod String? (Substituído pelos booleans acima)

  accounts Account[]
  sessions Session[]
}

// tokenisação
model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model IntegracaoContaAzul {
  id String @id @default(uuid())

  accessToken  String? @db.Text
  refreshToken String? @db.Text
  expiresIn    Int?
  updatedAt    DateTime @updatedAt

  empresaId Int     @unique
  empresa   Company @relation(fields: [empresaId], references: [id])

  @@map("integracao_conta_azul")
}

model ContaAzulCliente {
  id              String    @id @default(uuid())
  caId            String    @unique
  idLegado        Int?
  uuidLegado      String?
  nome            String
  documento       String?
  email           String?
  telefone        String?
  ativo           Boolean   @default(true)
  tipoPessoa      String?
  perfis          String[]
  observacoes     String?   @db.Text
  dataCriacaoCA   DateTime?
  dataAlteracaoCA DateTime?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  contratoId         String?   @unique
  contratoStatus     String?
  contratoNumero     Int?
  contratoInicio     DateTime?
  contratoVencimento DateTime?

  recebimentos ContaAzulRecebimento[]

  empresaId Int
  empresa   Company @relation(fields: [empresaId], references: [id])

  @@map("conta_azul_clientes")
}

model ContaAzulRecebimento {
  id String @id @default(uuid())

  id_ca_receber   String   @unique
  status          String
  total           Float
  Venda_CA        String
  data_vencimento DateTime
  Venda_Status    String
  Venda_A_Receber Float
  Venda_Pago      Float
  Venda_dtCriacao DateTime
  Venda_DtUpdate  DateTime

  client_id   String
  client_nome String

  cliente ContaAzulCliente @relation(fields: [client_id], references: [caId])

  empresaId Int
  empresa   Company @relation(fields: [empresaId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("conta_azul_recebimentos")
}

model PdvIntegration {
  id           Int      @id @default(autoincrement())
  username     String
  password     String
  clientId     String
  clientSecret String
  accessToken  String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("pdv_integrations")
}

model PdvLicencaGrupo {
  id                  Int       @id @default(autoincrement())
  codGrupo            Int       @unique
  nome                String
  documento           String?
  ativo               Boolean
  produto             String?
  qtdLojasAtivas      Int
  qtdLojasDesativadas Int
  dataCadastroApi     DateTime?

  filiais PdvLicencaFilial[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("pdv_licenca_grupos")
}

// Armazena as filiais dentro de cada grupo
model PdvLicencaFilial {
  id              Int       @id @default(autoincrement())
  sistema         String?   @default("PDVLEGAL")
  codGrupo        Int
  codFilial       Int       @unique
  nome            String
  documento       String?
  ativo           Boolean
  matriz          Boolean
  email           String?
  dataCadastroApi DateTime?

  grupoId Int
  grupo   PdvLicencaGrupo @relation(fields: [grupoId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("pdv_licenca_filiais")
}

model Company {
  id        Int     @id @default(autoincrement())
  cnpj      String  @unique
  name      String // Razão Social
  tradeName String? // Nome Fantasia
  email     String?

  // Endereço
  cep          String?
  street       String?
  number       String?
  complement   String?
  neighborhood String?
  city         String?
  state        String?
  country      String?

  contaAzul      IntegracaoContaAzul?
  clientesCA     ContaAzulCliente[]
  recebimentosCA ContaAzulRecebimento[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("companies")
}

model RateLimit {
  key       String   @id // Ex: "2fa:usuario@email.com"
  count     Int      @default(0)
  expiresAt DateTime
}
